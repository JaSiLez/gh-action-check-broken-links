{
  "name": "@jasilez/gh-action-check-broken-links",
  "description": "A GitHub Action that checks for the presence of broken links",
  "main": "lib/main.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run pack && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "next-hashicorp precommit"
    }
  },
  "keywords": ["actions", "node", "link", "check"],
  "author": "Jaime Silva",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@hashicorp/nextjs-scripts": "^19.0.3",
    "rehype-parse": "^6.0.2",
    "remark-parse": "^10.0.1",
    "unified": "^9.1.0",
    "unist-util-find": "^1.0.1",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@octokit/types": "^2.16.2",
    "@types/glob": "^7.1.3",
    "@types/hast-format": "^2.3.0",
    "@types/jest": "^24.9.1",
    "@types/mdast": "^3.0.3",
    "@types/node": "^12.12.53",
    "@types/node-fetch": "^2.5.7",
    "@types/unist": "^2.0.3",
    "@zeit/ncc": "^0.20.5",
    "husky": "^4.2.5",
    "jest": "^27.5.1",
    "jest-circus": "^24.9.0",
    "ts-jest": "^27.1.4",
    "typescript": "^3.9.7"
  }
